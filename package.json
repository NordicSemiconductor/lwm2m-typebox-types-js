{
  "name": "@nordicsemiconductor/lwm2m-types",
  "description": "TypeScript type definitions and JSON schema for the objects defined in the LwM2M Object Registry.",
  "scripts": {
    "test": "jest",
    "prepare": "husky install",
    "prepublish": "npx swc -C jsc.experimental.keepImportAssertions=true -d dist ./src"
  },
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./export.js",
      "node": "./export.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/lwm2m-types-js.git"
  },
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/lwm2m-types-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/lwm2m-types-js#readme",
  "keywords": [
    "nrf-asset-tracker",
    "lwm2m",
    "json-schema"
  ],
  "dependencies": {
    "ajv": "8.12.0"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.174",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "11.0.2",
    "@sinclair/typebox": "0.25.21",
    "@swc/cli": "0.1.60",
    "@swc/core": "1.3.31",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.4.0",
    "@types/xml2js": "0.4.11",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "chalk": "5.2.0",
    "fluent-json-schema": "4.0.0",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "prettier": "2.8.3",
    "tsx": "3.12.2",
    "typescript": "4.9.5",
    "xml2js": "0.4.23"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.spec\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "export.js",
    "index.d.ts",
    "example.ts",
    "types",
    "types-dist",
    "dist",
    "src",
    "LwM2MDocument.schema.json",
    "package-lock.json",
    "LICENSE",
    "README.md"
  ]
}
