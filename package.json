{
  "name": "@nordicsemiconductor/lwm2m-typebox-types",
  "description": "TypeBox definitions for the objects defined in the LwM2M Object Registry.",
  "scripts": {
    "test": "jest",
    "prepare": "husky install"
  },
  "type": "module",
  "types": "./index.d.ts",
  "dependencies": {
    "@sinclair/typebox": "0.25.10",
    "ajv": "8.11.2"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.148",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "10.0.51",
    "@swc/jest": "0.2.23",
    "@types/jest": "29.2.3",
    "@types/xml2js": "0.4.11",
    "chalk": "5.1.2",
    "fluent-json-schema": "4.0.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "prettier": "2.8.0",
    "tsx": "3.12.1",
    "typescript": "4.9.3",
    "xml2js": "0.4.23"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.spec\\.ts$"
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
